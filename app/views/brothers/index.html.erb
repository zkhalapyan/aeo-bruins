<div class='row'>
  <div class='span9 center-me'>

      <% @brothers.each do |brother| %>
        <div class="row brother-details">
          <div class='span3'>
            <%= image_tag brother.avatar.url(:medium), :alt=>brother.name %>
          </div>
          <div class='span6'>
            <h3><%=brother.name %></h3>

            <h4><%=brother.major %></h4>

            <p><%=brother.biography %></p>
          </div>
        </div>
      <% end %>

  </div>
</div>

<div class='row'>
  <div class='span2 center-me'>
    <%= link_to 'New Brother', new_brother_path %>
  </div>
</div>

