<div class='row'>

  <div class='span10 center-me'>
    <ul class="thumbnails">
      <% @brothers.each do |brother| %>
        <li class="span5 clearfix">
          <div class="thumbnail clearfix">
            <%= image_tag brother.avatar.url(:medium), :alt=>brother.name, :class=>"pull-left span2 clearfix" %>
            <div class="caption" class="pull-left">
              <%= link_to 'Read Bio', brother, :class=>"btn btn-primary icon pull-right", :style => "color:white" %>
              <h4>
                <%=brother.name %>
              </h4>
              <small><b>Major: </b><%=brother.major %></small>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

</div>

<div class='row'>
  <div class='span2 center-me'>
    <%= link_to 'New Brother', new_brother_path %>
  </div>
</div>

